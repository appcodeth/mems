<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pm_complete_wizard" model="ir.ui.view">
        <field name="name">Confirm Complete</field>
        <field name="model">mems.pm.complete.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm">
                <group>
                    <strong>
                        Do you want to complete PM
                        <field name="pm_name" readonly="1"/> ?
                    </strong>
                </group>
                <footer>
                    <button string="Approve" name="do_confirm_complete" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
