<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_equipment_adjust_wizard" model="ir.ui.view">
        <field name="name">Confirm Adjust</field>
        <field name="model">mems.equipment.adjust.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm">
                <group>
                    <field name="equip_name" readonly="1"/>
                    <field name="equip_qty"/>
                </group>
                <footer>
                    <button string="Adjust" name="do_confirm_adjust" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
