<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wo_close_wizard" model="ir.ui.view">
        <field name="name">Confirm Close</field>
        <field name="model">mems.wo.close.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm">
                <group>
                    <strong>
                        Do you want to close
                        <field name="wo_name" readonly="1"/>
                        ?
                    </strong>
                </group>
                <footer>
                    <button string="OK" name="do_confirm_close" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
