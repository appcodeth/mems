<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PullingOverdateReport">
        <div class="container-fluid">
            <h1>รายงานคุรุภัณฑ์ที่ยืมเกินกำหนด</h1>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-inline">
                        <a href="#" class="btn btn-success" id="btnShowReport">แสดงรายงาน</a>
                        <div class="pull-right">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="button" class="btn btn-default">
                                    <i class="fa fa-file-pdf-o"/>
                                    PDF
                                </button>
                                <button type="button" class="btn btn-default">
                                    <i class="fa fa-file-excel-o"/>
                                    Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default" id="panel-report" style="display:none">
                <table class="table table-bordered table-hover" id="table-report">
                    <thead>
                        <tr>
                            <th class="text-center">ลำดับ</th>
                            <th class="text-center">รหัส</th>
                            <th>ชื่อคุรุภัณฑ์</th>
                            <th>ยี่ห้อ</th>
                            <th>รุ่น</th>
                            <th class="text-center">เลขเครื่อง S/N</th>
                            <th class="text-center">เลขที่ยืม</th>
                            <th>แผนกที่ยืม</th>
                            <th class="text-center">วันที่ยืม</th>
                            <th class="text-center">กำหนดคืน</th>
                            <th class="text-center">เกินกำหนด (วัน)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <script src="/mems_report/static/src/app/reportLibs.js"></script>
        <script src="/mems_report/static/src/app/pullingOverdateReport.js"></script>
    </t>
</templates>
