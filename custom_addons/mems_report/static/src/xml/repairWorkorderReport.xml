<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="RepairWorkorderReport">
        <div class="container-fluid">
            <h1>รายงานสถานะการซ่อม</h1>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-inline">
                        <a href="#" class="btn btn-success" id="btnShowReport">แสดงรายงาน</a>
                        <div class="pull-right">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="button" class="btn btn-default">
                                    <i class="fa fa-file-pdf-o"/>
                                    PDF
                                </button>
                                <button type="button" class="btn btn-default">
                                    <i class="fa fa-file-excel-o"/>
                                    Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default" id="panel-report" style="display:none">
                <table class="table table-bordered table-hover" id="table-report">
                    <thead>
                        <tr>
                            <th class="text-center">เลขที่ใบแจ้งซ่อม</th>
                            <th class="text-center">วันที่ซ่อม</th>
                            <th>คุรุภัณฑ์</th>
                            <th class="text-center">ยี่ห้อ / รุ่น</th>
                            <th class="text-center">เลขเครื่อง</th>
                            <th>อาการเสีย</th>
                            <th>ซ่อมโดย</th>
                            <th>ผู้รับผิดชอบ</th>
                            <th class="text-center">อนุมัติ</th>
                            <th class="text-center">ซ่อมเสร็จ</th>
                            <th class="text-center">ปิดงาน</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <script src="/mems_report/static/src/app/reportLibs.js"></script>
        <script src="/mems_report/static/src/app/repairWorkorderReport.js"></script>
    </t>
</templates>
