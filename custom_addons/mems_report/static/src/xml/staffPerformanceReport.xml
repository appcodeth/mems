<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="StaffPerformanceReport">
        <div class="container-fluid">
            <h1 class="mb-4">รายงานประสิทธิภาพช่าง (!!ไม่เป็นทางการ)</h1>
            <div class="panel panel-default panel-flat">
                <div class="panel-body">
                    <div class="form-inline">
                        <a href="#" class="btn btn-success" id="btnShowReport">แสดงรายงาน</a>
                        <div class="pull-right">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="button" class="btn btn-default" id="btnExportPDF">
                                    <i class="fa fa-file-pdf-o"/>
                                    PDF
                                </button>
                                <button type="button" class="btn btn-default" id="btnExportExcel">
                                    <i class="fa fa-file-excel-o"/>
                                    Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default panel-flat" id="panel-report" style="display:none">
                <table class="table table-bordered table-hover" id="table-report">
                    <thead>
                        <tr>
                            <th class="text-center">ลำดับ</th>
                            <th>ชื่อ</th>
                            <th>อีเมล</th>
                            <th class="text-center">จำนวนงานซ่อม</th>
                            <th class="text-center">จำนวนงานซ่อมเสร็จ</th>
                            <th class="text-center">จำนวนงานที่ปิด</th>
                            <th class="text-center">ประสิทธิภาพ (%)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <script src="/mems_report/static/src/app/reportLibs.js"></script>
        <script src="/mems_report/static/src/app/staffPerformanceReport.js"></script>
    </t>
</templates>
